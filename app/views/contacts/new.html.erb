<%= form_for :contact, url: contacts_path do |f| %>
<!-- Main Content -->
  <div class="container">
     <% if @contact && @contact.errors.any? %>
              <p>
                <ul>
                  <% @contact.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                  <% end %>
                </ul> 
              </p>
            <% end %>
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <p>Want to get in touch? Fill out the form below to send me a message and I will get back to you as soon as possible!</p>
        <form name="sentMessage" id="contactForm" novalidate>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">

              <label>Name</label>
              <%= f.text_field :name, class: "form-control", placeholder: "Name", id: "name" %>
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Email Address</label>
              <%= f.text_field :email, class: "form-control", placeholder: "Email Address", id: "email" %>
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Message</label>
              <%= f.text_area :message, textarea_rows: "5", class: "form-control", placeholder: "Message", id: "message" %>
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <br>
          <div id="success"></div>
          <div class="form-group">
            <%= f.submit 'Send Message', class: "btn btn-primary", id: "sendMessageButton" %>
          </div>
        </form>
      </div>
    </div>
  </div>
  <% end %>

