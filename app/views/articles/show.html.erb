<!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
    <div class="container">
      <%= link_to "Anto Monti Official", "http://antomonti.com/", class: "navbar-brand" %>
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        Menu
        <i class="fas fa-bars"></i>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <%= link_to "Create Article", new_article_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "About", about_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Articles", articles_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Contact", new_contacts_path, class: "nav-link" %>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url(<%= image_path "post-bg.jpg" %>)">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= @article.title %></h1>
            <h2 class="subheading"><%= @article.subtitle %></h2>
            <span class="meta">Posted by
              <a href="#">Anto Monti</a>
              <%= @article.created_at.strftime("%b %d, %Y") %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <%= @article.text %>

          <h4>Comments</h4>
          <%= render @article.comments %>
          <h5>Add a comment:</h5>
          <%= render 'comments/form' %>

          <%= link_to 'Back', articles_path, class: "btn btn-primary" %> 
          <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-warning" %>
          <%= link_to 'Destroy', article_path(@article), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </article>

  <hr>


